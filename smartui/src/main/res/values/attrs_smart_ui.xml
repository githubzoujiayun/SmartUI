<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 半径 -->
    <attr name="radius" format="dimension"/>
    <!-- 填充颜色 -->
    <attr name="fillColor" format="color"/>
    <!-- 图标与文字垂直间距 -->
    <attr name="verticalSpace" format="dimension"/>
    <!-- 圆形标记与TabBar右侧间距 -->
    <attr name="badgeMarginRight" format="dimension"/>
    <!-- 圆形标记与TabBar上方间距 -->
    <attr name="badgeMarginTop" format="dimension"/>
    <!-- 文字内容 -->
    <attr name="text" format="string"/>
    <!-- 文字大小 -->
    <attr name="textSize" format="dimension"/>
    <!-- 文字颜色 -->
    <attr name="textColor" format="color|reference"/>
    <!-- 圆形标记是否可见 -->
    <attr name="badgeVisible" format="boolean"/>
    <!-- 圆形标记半径 -->
    <attr name="badgeRadius" format="dimension"/>
    <!-- 圆形标记填充颜色 -->
    <attr name="badgeFillColor" format="color"/>
    <!-- 圆形标记文字 -->
    <attr name="badgeText" format="string"/>
    <!-- 圆形标记文字大小 -->
    <attr name="badgeTextSize" format="dimension"/>
    <!-- 圆形标记文字颜色 -->
    <attr name="badgeTextColor" format="color"/>
    <!-- 图片源 -->
    <attr name="imageDrawable" format="reference"/>
    <!-- 选中的单选按钮 -->
    <attr name="checkedButton" format="reference"/>
    <!-- 文字大小自动适配 -->
    <attr name="autoTextSize" format="boolean"/>
    <!-- 按下状态文字颜色 -->
    <attr name="smart_ui_pressed_text_color" format="color"/>
    <!-- 正常状态文字颜色 -->
    <attr name="smart_ui_normal_text_color" format="color"/>
    <!-- 关闭状态文字颜色 -->
    <attr name="smart_ui_disable_text_color" format="color"/>
    <!-- 正常状态背景颜色 -->
    <attr name="smart_ui_normal_background_color" format="color"/>
    <!-- 按下状态背景颜色 -->
    <attr name="smart_ui_pressed_background_color" format="color"/>
    <!-- 关闭状态背景颜色 -->
    <attr name="smart_ui_disable_background_color" format="color"/>
    <!-- 弧度 -->
    <attr name="smart_ui_radius" format="dimension"/>
    <!-- 外边框线条宽度 -->
    <attr name="smart_ui_out_border_line_width" format="dimension"/>
    <!-- 外边框线条颜色 -->
    <attr name="smart_ui_out_border_line_color" format="color"/>
    <!-- 外边框线条类型 -->
    <attr name="smart_ui_out_border_line_type" format="enum">
        <enum name="SOLID" value="1"/>
        <enum name="DOTTED" value="2"/>
    </attr>
    <!-- dash宽度 -->
    <attr name="smart_ui_dash_width" format="dimension"/>
    <!-- dashgap -->
    <attr name="smart_ui_dash_gap" format="dimension"/>
    <!-- 是否显示进度条 -->
    <attr name="smart_ui_display_progress_bar" format="boolean"/>
    <!-- 进度条高度 -->
    <attr name="smart_ui_progress_bar_height" format="dimension"/>
    <!-- 进度条颜色 -->
    <attr name="smart_ui_progress_bar_color" format="color"/>
    <!-- 进度条背景颜色 -->
    <attr name="smart_ui_progress_bar_background_color" format="color"/>
    <!-- 外边框线弧度半径 -->
    <attr name="smart_ui_out_border_radius" format="dimension"/>
    <!-- 间隔线宽度 -->
    <attr name="smart_ui_divider_line_width" format="dimension"/>
    <!-- 间隔线颜色 -->
    <attr name="smart_ui_divider_line_color" format="color"/>
    <!-- 圆点半径 -->
    <attr name="smart_ui_dot_radius" format="dimension"/>
    <!-- 圆点颜色 -->
    <attr name="smart_ui_dot_color" format="color"/>
    <!-- 输入框宽度 -->
    <attr name="smart_ui_input_box_width" format="dimension"/>
    <!-- 密码长度(默认为6) -->
    <attr name="smart_ui_pwd_ength" format="integer"/>
    <!-- 显示删除按钮 -->
    <attr name="smart_ui_delete_visible" format="boolean" />

    <!-- 图片Scale Type -->
    <attr name="imageScaleType" format="enum">
        <enum name="MATRIX" value="0"/>
        <enum name="FIT_XY" value="1"/>
        <enum name="FIT_START" value="2"/>
        <enum name="FIT_CENTER" value="3"/>
        <enum name="FIT_END" value="4"/>
        <enum name="CENTER" value="5"/>
        <enum name="CENTER_CROP" value="6"/>
        <enum name="CENTER_INSIDE" value="7"/>
    </attr>
    <!-- 图片宽度 -->
    <attr name="imageWidth" format="dimension"/>
    <!-- 图片高度 -->
    <attr name="imageHeight" format="dimension"/>

    <!-- 圆形TextView -->
    <declare-styleable name="RoundedTextView">
        <attr name="radius"/>
        <attr name="fillColor"/>
    </declare-styleable>

    <!-- TabBar -->
    <declare-styleable name="TabBar">
        <attr name="verticalSpace"/>
        <attr name="badgeMarginRight"/>
        <attr name="badgeMarginTop"/>
        <attr name="text"/>
        <attr name="textSize"/>
        <attr name="textColor"/>
        <attr name="badgeTextSize"/>
        <attr name="badgeTextColor"/>
        <attr name="imageDrawable"/>
        <attr name="badgeText"/>
        <attr name="badgeFillColor"/>
        <attr name="badgeVisible"/>
        <attr name="badgeRadius"/>
        <attr name="imageScaleType"/>
        <attr name="imageWidth"/>
        <attr name="imageHeight"/>
    </declare-styleable>

    <!-- TabBarGroup -->
    <declare-styleable name="TabBarGroup">
        <attr name="checkedButton"/>
    </declare-styleable>

    <!-- SmartTextView -->
    <declare-styleable name="SmartTextView">
        <attr name="autoTextSize"/>
    </declare-styleable>

    <!-- SmartButton -->
    <declare-styleable name="SmartButton">
        <attr name="smart_ui_radius"/>
        <attr name="smart_ui_pressed_text_color"/>
        <attr name="smart_ui_normal_text_color"/>
        <attr name="smart_ui_disable_text_color"/>
        <attr name="smart_ui_pressed_background_color"/>
        <attr name="smart_ui_normal_background_color"/>
        <attr name="smart_ui_disable_background_color"/>
        <attr name="smart_ui_out_border_line_width"/>
        <attr name="smart_ui_out_border_line_color"/>
        <attr name="smart_ui_out_border_line_type"/>
        <attr name="smart_ui_dash_width"/>
        <attr name="smart_ui_dash_gap"/>
    </declare-styleable>
    
    <declare-styleable name="SmartWebView">
        <attr name="smart_ui_display_progress_bar" />
        <attr name="smart_ui_progress_bar_height" />
        <attr name="smart_ui_progress_bar_color" />
        <attr name="smart_ui_progress_bar_background_color"/>
    </declare-styleable>

    <declare-styleable name="PwdEditText">
        <attr name="smart_ui_out_border_line_width"/>
        <attr name="smart_ui_out_border_radius"/>
        <attr name="smart_ui_out_border_line_color"/>
        <attr name="smart_ui_divider_line_width"/>
        <attr name="smart_ui_divider_line_color"/>
        <attr name="smart_ui_dot_radius"/>
        <attr name="smart_ui_dot_color"/>
        <attr name="smart_ui_input_box_width"/>
        <attr name="smart_ui_pwd_ength"/>
    </declare-styleable>

    <declare-styleable name="SmartEditText">
        <attr name="smart_ui_delete_visible" />
    </declare-styleable>
</resources>
